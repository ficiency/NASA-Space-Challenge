{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build frontend & Launch Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/app/backend/server.js",
      "cwd": "${workspaceFolder}/app/backend",
      "preLaunchTask": "build-frontend",
      "env": {
        "OPEN_BROWSER": "true"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Backend listening on (https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Start Frontend (Vite dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["--prefix", "${workspaceFolder}/app/frontend", "run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:\\s*(http://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
